	<head>
<%= stylesheet_link_tag "test.css" %>
</head>
<body>

<%= form_for Album.new, url: user_albums_path do |u|%>
<div style="width=100%; margin-top:10px; background-color:#CC6666; padding:10px; overflow:none;">
<div style="margin-left:5%;">
	
<span style="font-size:30px"><b>Hi!</b> <%=current_user.name %> </span><br/>
		<span style="font-size:20px;">Create your Album here</h3>
<p>
	<div style="width:250px;">
	<%= u.text_field :album_name, :placeholder=>"Enter Album Name",:class=>"form-control"%></div>
