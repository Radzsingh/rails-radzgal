	<br/>
	<%=u.submit "Add image",:class=>"btn btn-primary"  %>
	
	
	</p>
	</div>
	</div>
	<table style="width:30%; margin-left:100px;">
		<tr>
 <td><p><span style="font-size:30px;">Click to see your albums </span></h3></p></td>
 <td>
 	<div class="move">
 		<%=link_to  image_tag("foldershow.gif", :alt=>"Click to see all albums", :height=>130, :width=>130), user_albums_path  %>
 		</div>
 		</td>

</tr>
</table>
	<%end%>
	

