<div class="photo">
  <%= form.fields_for :images, image, :child_index => (image.new_record? ? "index_to_replace_with_js" : nil) do |photo_form| %>
    <p>
      <%= photo_form.label :title %>
      <%= photo_form.text_field :title %>
      <%= photo_form.file_field :upload %>
      <%= link_to_function "delete", "remove_field($(this), ('.image'))" %>
    </p>
  <% end %>
</div>